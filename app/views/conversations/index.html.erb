<%= provide(:title, 'Your Conversations') %>

<div class='container conversation-interface'>
  <div class="mailbox-select">
    <ul class="nav nav-pills nav-fill mailboxes">
      <li class='nav-item'>
          <%= mailbox_section 'inbox', @box, class: 'nav-link mailbox' %>
      </li>
      <li class='nav-item'>
          <%= mailbox_section 'sent', @box, class: 'nav-link' %>
      </li>
      <li class='nav-item'>
          <%= mailbox_section 'trash', @box, class: 'nav-link' %>      
      </li>
    </ul>
    <div class='conversation-btn'>
      <%= link_to 'Start conversation', new_message_path, class: 'btn btn-xs btn-info' %>
    
      <% if @box == 'trash' %>
      <p><%= link_to 'Empty trash', empty_trash_conversations_path, class: 'btn btn-nav', method: :delete,
                    data: {confirm: 'Are you sure?'} %></p>
      <% end %>  
    </div>
  </div>

  <div class="message-display">
    <ul class="list-group">
      <%= render partial: 'conversations/conversation', collection: @conversations %>
    </ul>
    
    <%= will_paginate %>
  </div>
</div>
