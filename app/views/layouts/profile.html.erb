<!DOCTYPE html>
<html>
  <head>
    <title>Dev Communities | <%= yield(:title)%></title>
    <%= render 'layouts/rails_default' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <div id='navbar-padding'></div>
    <div class='container profile'>
      <div id='flash'>
          <% flash.each do |message_type, message| %>
            <%= content_tag(:div, class: "alert alert-#{message_type}") do %>
              <%= content_tag(:div, message) %>
              <%= button_tag(type: 'button', class: 'close', 'aria-label': 'Close', 'data-dismiss': 'alert' ) do %>
                <%= content_tag(:span, "\u00D7", 'aria-hidden': true, class: 'ml-2') %>
              <% end %>
            <% end %>
          <% end %>
      </div>
      <%= yield %>
    </div>
    <!-- <%= debug(params) if Rails.env.development? %> -->
  </body>
</html>
