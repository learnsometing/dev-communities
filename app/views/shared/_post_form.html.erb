<div class='container post'>
  <%= form_for @new_post, method: :post, url: posts_path do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class='post_field'>
        <%= f.text_area :content, placeholder: 'What would you like to share?', class: 'form-control', required: true %>
    </div>

    <div class='d-flex flex-row-reverse'>
      <%= f.submit 'Post', class: 'btn btn-dark' %>
    </div>
  <% end %>
</div>