<%= provide(:title, 'Sign Up')%>
<div class='container d-flex flex-column align-items-center mt-5' >
  <h2>Create a New Account</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'd-flex flex-column align-items-center' }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.text_field :name, placeholder: 'Full name', class: 'form-control mb-2'%>

      <%= f.email_field :email, autofocus: true, placeholder: 'Email', autocomplete: "email", class: 'form-control mb-2' %>
    
      <%= f.password_field :password, placeholder: "Password (#{@minimum_password_length} char minimum)", autocomplete: "new-password", class: 'form-control mb-2' %>
    
      <%= f.password_field :password_confirmation, placeholder: 'Confirm password', autocomplete: "new-password", class: 'form-control mb-2' %>
    
      <%= f.submit "Sign up", class: 'btn btn-dark mb-2' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
