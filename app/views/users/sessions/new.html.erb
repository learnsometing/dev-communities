<%= provide(:title, 'Sign In')%>
<div class='container d-flex flex-column align-items-center mt-5' >  

<h2>Log In To Your Account</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'd-flex flex-column align-items-center'}) do |f| %>
    <div class="field mb-2">
      <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="field mb-2">
      <%= f.password_field :password, placeholder: 'password', autocomplete: "current-password", class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-2">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions mb-2">
      <%= f.submit "Log in", class: 'btn btn-dark' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
