<%= provide(:title, @user.name) %>

<div class='container container-fluid profile'>
  <div class='prof_pic'>
    <% if current_user?(@user) %>
      <%= link_to image_tag(@user.profile_picture.profile.url), edit_user_path(@user) %>
    <% else %>
      <%= image_tag(@user.profile_picture.profile.url) %>
    <% end %>
  </div>
  <nav class='navbar navbar-expand-sm navbar-light bg-light'>
    <div class='navbar-brand mr-auto'>
      <div class='user_name'>
        <%= @user.name %>
      </div>
    </div>
    <ul class='navbar-nav'>
      <% unless current_user?(@user) or already_requested?(@user) %>
        <li class='friend_request_btn'>
          <%= form_for @friend_request, method: :post, url: friend_requests_url do |f| %>
            <%= f.hidden_field :friend_id, value: @user.id %>
            <%= f.submit 'Send Friend Request', class: 'btn btn-profile' %>
          <% end %>
        </li>
      <% end %>
    </ul> 
  </nav>
  <div class='container post_form'>
    <% if @new_post %>
      <%= render 'shared/post_form' %>
    <% end %>
  </div>
  <div class='container posts-container d-flex flex-column justify-content-center'>
    <% if @user.posts.any? %>
      <ol class='row d-flex flex-column align-items-center posts-list'>
        <%= render @posts %>
      </ol>
    <% end %>
  </div>
</div>