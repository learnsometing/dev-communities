<%= provide(:title, current_user.name) %>

<div class='container container-fluid'>
  <nav class='navbar navbar-expand-sm navbar-light bg-light'>
    <div class='navbar-brand mr-auto'>
      <div class='prof_pic'>
        <% if profile_belongs_to_current_user(@user) %>
          <%= link_to image_tag(@user.profile_picture.profile.url), edit_user_path(@user) %>
        <% else %>
          <%= image_tag(@user.profile_picture.profile.url) %>
        <% end %>
      </div>
      <div class='user_name'>
        <%= @user.name %>
      </div>
    </div>
    <ul class='navbar-nav'>
      <% unless profile_belongs_to_current_user(@user) %>
        <li>
          <%= link_to 'Send Friend Request', '#', class: 'btn btn-profile' %>
        </li>
      <% end %>
    </ul>
  
  </nav>
  <div class='container posts-container'>
    <% if @user.posts.any? %>
      <ol class='row d-flex flex-column align-items-center posts-list'>
        <%= render @posts %>
      </ol>
    <% end %>
  </div>
</div>